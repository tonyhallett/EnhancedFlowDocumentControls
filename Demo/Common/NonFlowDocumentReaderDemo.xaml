<UserControl
  x:Class="Demo.Common.NonFlowDocumentReaderDemo"
  x:ClassModifier="internal"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Demo.Common"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <DockPanel x:Name="DockPanel"
    LastChildFill="True">
    <local:DocumentNullSwitcher
      DockPanel.Dock="Top"
      FlowControl="{Binding RelativeSource={RelativeSource AncestorType=local:NonFlowDocumentReaderDemo}, Path=FlowControl}" />
    <ContentPresenter
      Content="{Binding RelativeSource={RelativeSource AncestorType=local:NonFlowDocumentReaderDemo}, Path=FlowControl}" />
  </DockPanel>
</UserControl>
